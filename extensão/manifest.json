{
  "manifest_version": 3,
  "version": "0.0.1",
  "name": "ReWriteIt",
  "description": "Ferramenta para melhorar textos utilizando IA.",
  "author": "Alexandre Vidal",
  "action": {
    "default_title": "ReWriteIt",
    "default_popup": "popup.html"
